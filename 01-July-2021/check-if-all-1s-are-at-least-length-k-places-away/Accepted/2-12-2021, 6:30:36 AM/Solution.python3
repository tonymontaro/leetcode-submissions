// https://leetcode.com/problems/check-if-all-1s-are-at-least-length-k-places-away

class Solution:
    def kLengthApart(self, nums: List[int], k: int) -> bool:
        prev = -(k+1)
        for i, num in enumerate(nums):
            if num == 0:
                continue
            if i - prev - 1 < k:
                return False
            prev = i
        return True